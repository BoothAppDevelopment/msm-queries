<h1>List of all movies</h1>

<hr>

<table border="1">
  <tr>
    <td><b>ID</b></td>
    <td><b>Image</b></td>
    <td><b>Title</b></td>
    <td><b>Year</b></td>
    <td><b>Director</b></td>
    <td><b> </b></td>
  </tr>

  <% @list_of_films.each do |film| %>
  <tr> 
    <td><%= film.id %></td>
    <td><img src="<%= film.image %>"></td>
    <td><%= film.title %></td>
    <td><%= film.year %></td>
    <td><%= @list_of_directors.where({ :id => film.director_id}).first.name %></td>
    <td><a href="/movies/<%= film.id %>">Show details</a></td>
  </tr>
  <% end %>
  
  


</table>