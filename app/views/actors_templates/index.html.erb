<h1>List of all actors</h1>
<hr>

<table border="1">
  <tr>
    <td><b>ID</b></td>
    <td><b>Image</b></td>
    <td><b>Name</b></td>
    <td><b>Dob</b></td>
    <td><b> </b></td>
  </tr>

  <% @list_of_actors.each do |actor| %>
    <tr>
      <td><%=actor.id %></td>
      <td><img src="<%= actor.image %>"></td>
      <td><%= actor.name %></td>
      <td><%= actor.dob %></td>
      <td><a href = "/actors/<%= actor.id %>">Show details </a></td>
    </tr>
  <% end %>
</table>